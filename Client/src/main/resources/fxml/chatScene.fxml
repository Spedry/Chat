<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane stylesheets="@../css/css.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChatController">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ListView mouseTransparent="true" prefHeight="200.0" prefWidth="200.0" styleClass="mainListView" />
                        <ListView fx:id="peopleOnline" mouseTransparent="true" prefHeight="400.0" prefWidth="309.0" styleClass="secondaryListView" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <VBox prefHeight="400.0" prefWidth="415.0" styleClass="scroll-pane">
               <children>
                  <ScrollPane fx:id="chatMessageScrollPane" fitToWidth="true" hbarPolicy="NEVER" prefHeight="378.0" prefWidth="408.0">
                     <content>
                        <VBox fx:id="chatBox" alignment="TOP_RIGHT" disable="true" prefHeight="377.0" prefWidth="407.0" />
                        <!--<ListView fx:id="chatPane" prefHeight="377.0" prefWidth="407.0" />-->
                     </content>
                  </ScrollPane>
                  <HBox prefHeight="33.0" prefWidth="408.0">
                     <children>
                        <TextField fx:id="messageField" onAction="#sendOnEnterPress" prefHeight="27.0" prefWidth="408.0" promptText="Message..." styleClass="textfield" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
